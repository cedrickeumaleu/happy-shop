{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container">
    <div class="login-box">
        <h2>Connexion</h2>
        <form method="post" id="loginForm">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {# {% if app.user %}
