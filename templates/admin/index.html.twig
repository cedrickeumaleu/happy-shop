{# templates/admin/index.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Admin. | {{ parent() }}{% endblock %}

{% block body %}
    <div class="admin-page">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    {# <a href="{{ path('product_add') }}" class="btn btn blue darken-4" style="float: right">Ajouter</a> #}
                    <h5>produit</h5>
                    <table>
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Publier</th>
                            <th>Date de publication</th>
                            <th>Date de modification</th>
                            <th>Actions</th>
                        </tr>
                        {% set i = 1 %}
                        {% for product in products %}
                            <tr>
                                <td>{{ i }}</td>
                                {# <td><a href="{{ path('article_show', {'url': product.url}) }}" target="_blank">{{ product.title }}</a></td> #}
                                <td>
                                    {# <span class="badge {{product.isPublished ? 'blue' : 'red' }}">
                                        {{ product.isPublished ? 'oui' : 'non' }}
                                    </span> #}
                                </td>
                                {# <td>{{ product.isPublished ? article.publicationDate|date('d/m/Y') : '-' }}</td>
                                <td>{{ product.lastUpdateDate|date('d/m/Y') }}</td> #}
                                <td>
                                    <a href="{{ path('product_edit', {'id':product.id}) }}"><i class="material-icons blue-text">edit</i></a>
                                    {# <a href="{{ path('product_remove', {'id': product.id}) }}"><i class="material-icons red-text">delete</i></a> #}
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col s12 m-t-30">
                    <h5>Utilisateurs</h5>
                    <table>
                        <tr>
                            <th>#</th>
                            <th>Adresse email</th>
                            <th>Username</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                        {% set i = 1 %}
                        {% for user in users %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.username }}</td>
                                <td>
                                    <span class="badge blue">
                                        admin.
                                    </span>
                                </td>
                                <td>
                                    <a href=""><i class="material-icons red-text">delete</i></a>
                                </td>
                            </tr>
                            {% set i = i+1 %}
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}