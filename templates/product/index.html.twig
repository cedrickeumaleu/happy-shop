                    <a class="list-group-item dropdown-toggle" href="{{ path('product_index') }}">VOIR TOUT</a>
                    
                    {% for categorie in categories %}
                    <a class="list-group-item " href="{{ path('filter',{'id':categorie.id}) }}" >
                    {{ categorie.nom }}
                    </a>
             
                        {% endfor %}

               </div>
            </div>
           
            <div class="col-10">
                <div class="row">
                
                {% for product in products %}
                
                    <div class="card col-3">
                        <img src="/assets/uploads/{{ product.image}}" alt="{{ product.image }}" class="card-img-top">
                        <div class="card-body"><hr>
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            <div class="price">
                            <span class="h5 mt-auto">{{ product.price }} €</span>
                            </div><hr>
                                {% if app.user %}
                                    {% if is_granted('ROLE_ADMIN') %}
                            
                                    <a class="btn btn-warning" style="float:right" href="{{ path('product_new') }}">Create new</a>
                                    <a href="{{ path('product_edit', {id: product.id}) }}" class="btn btn-warning">

                                    Editer
                                    </a> 
                                      <a href="{{ path('product_delete', {'id': product.id}) }}" class="btn btn-danger">

                                    Suprimer
                                    </a>   

                                    {% endif %}
                                {% endif %}
                                <a href="{{ path('product_show', {id: product.id}) }}" class="btn btn-dark">
                                    details
                                </a>    
